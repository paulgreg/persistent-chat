{
    "name": "semi-persistent-chat",
    "version": "0.1.0",
    "main": "src/server",
    "license": "MIT",
    "engines": {
        "node": ">=16.0.0"
    },
    "dependencies": {
        "@emoji-mart/data": "^1.1.2",
        "@emoji-mart/react": "^1.1.1",
        "axios": "^1.6.5",
        "cheerio": "^1.0.0-rc.10",
        "emoji-mart": "^5.5.2",
        "express": "^4.18.2",
        "lru-cache": "^10.1.0",
        "morgan": "^1.10.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-favicon": "^2.0.3",
        "react-linkify": "^1.0.0-alpha",
        "react-scripts": "^5.0.1",
        "smile2emoji": "^3.8.5",
        "socket.io": "^4.7.3",
        "socket.io-client": "^4.7.3",
        "uuid": "^9.0.1"
    },
    "scripts": {
        "start": "NODE_ENV=production node src/server",
        "dev:client": "react-scripts start",
        "dev:server": "npx nodemon src/server",
        "browserlist": "./node_modules/.bin/browserslist --update-db",
        "config": "if [ ! -f ./src/config.json ]; then cp ./src/config.json.dist ./src/config.json; fi;",
        "build": "npm run config && react-scripts build",
        "tdd": "react-scripts test",
        "test": "react-scripts test --watchAll=false",
        "lint": "prettier -c src",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "pre-commit": [
        "test",
        "lint"
    ],
    "devDependencies": {
        "pre-commit": "^1.2.2",
        "prettier": "^3.1.1"
    }
}
