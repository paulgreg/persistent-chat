{
    "name": "semi-persistent-chat",
    "version": "0.1.0",
    "main": "src/server/index.mjs",
    "license": "MIT",
    "engines": {
        "node": ">=16.0.0"
    },
    "type": "module",
    "dependencies": {
        "@emoji-mart/data": "^1.1.2",
        "@emoji-mart/react": "^1.1.1",
        "axios": "^1.6.5",
        "cheerio": "^1.0.0-rc.10",
        "emoji-mart": "^5.5.2",
        "express": "^4.18.2",
        "lru-cache": "^10.1.0",
        "morgan": "^1.10.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-favicon": "^2.0.3",
        "react-linkify": "^1.0.0-alpha",
        "smile2emoji": "^3.9.0",
        "socket.io": "^4.7.4",
        "socket.io-client": "^4.7.4",
        "uuid": "^9.0.1"
    },
    "scripts": {
        "start": "NODE_ENV=production node src/server/index.mjs",
        "dev:client": "vite",
        "dev:server": "nodemon src/server/index.mjs",
